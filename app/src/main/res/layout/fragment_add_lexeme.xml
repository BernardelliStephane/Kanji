<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.text.InputType" />

        <variable
            name="viewModel"
            type="fr.steph.kanji.ui.viewmodel.AddLexemeViewModel" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.fragment.AddLexemeFragment">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:clipToPadding="false"
            android:paddingBottom="@dimen/add_lexeme_default_margin"
            app:layout_constraintBottom_toTopOf="@id/button_cancel"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/characters_input_layout"
                    style="@style/TextInputLayout.FormField"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/add_lexeme_default_margin"
                    android:hint="@string/characters_hint"
                    app:errorEnabled="@{viewModel.uiState.charactersErrorRes != null}"
                    app:errorRes="@{viewModel.uiState.charactersErrorRes}"
                    app:layout_constraintTop_toTopOf="parent">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/characters_input"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textShortMessage"
                        android:text="@={viewModel.uiState.characters}" />

                </com.google.android.material.textfield.TextInputLayout>

                <Button
                    android:id="@+id/search_kanji"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/add_lexeme_half_margin"
                    android:onClick="@{() -> viewModel.onSearchClicked()}"
                    android:text="@string/search_kanji"
                    android:visibility="@{viewModel.uiState.charactersLoneKanji &amp;&amp; !viewModel.uiState.charactersFetched}"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/characters_input_layout" />

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/romaji_input_layout"
                    style="@style/TextInputLayout.FormField"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/add_lexeme_default_margin"
                    android:hint="@string/romaji_hint"
                    android:visibility="@{!viewModel.uiState.charactersFetched}"
                    app:errorEnabled="@{viewModel.uiState.romajiErrorRes != null}"
                    app:errorRes="@{viewModel.uiState.romajiErrorRes}"
                    app:layout_constraintTop_toBottomOf="@id/search_kanji">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/romaji_input"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="text"
                        android:text="@={viewModel.uiState.romaji}" />

                </com.google.android.material.textfield.TextInputLayout>

                <TextView
                    android:id="@+id/prefill_warning"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/add_lexeme_half_margin"
                    android:layout_marginTop="@dimen/add_lexeme_default_margin"
                    android:text="@string/warning_prefilled_fields"
                    android:textColor="@color/navy_blue"
                    android:visibility="@{viewModel.uiState.charactersFetched}"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/romaji_input_layout" />

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/meaning_input_layout"
                    style="@style/TextInputLayout.FormField"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@{viewModel.uiState.charactersFetched ? @dimen/add_lexeme_half_margin : @dimen/add_lexeme_default_margin}"
                    android:hint="@string/meaning_hint"
                    app:errorEnabled="@{viewModel.uiState.meaningErrorRes != null}"
                    app:errorRes="@{viewModel.uiState.meaningErrorRes}"
                    app:layout_constraintTop_toBottomOf="@id/prefill_warning"
                    tools:layout_marginTop="@dimen/add_lexeme_half_margin">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/meaning_input"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:focusable="@{!viewModel.uiState.charactersFetched}"
                        android:focusableInTouchMode="@{!viewModel.uiState.charactersFetched}"
                        android:inputType="@{viewModel.uiState.charactersFetched ? InputType.TYPE_NULL : InputType.TYPE_CLASS_TEXT}"
                        android:text="@={viewModel.uiState.meaning}" />

                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/onyomi_layout"
                    style="@style/TextInputLayout.FormField"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/add_lexeme_default_margin"
                    android:hint="@string/onyomi"
                    android:visibility="@{viewModel.uiState.charactersFetched &amp;&amp; !viewModel.uiState.onyomi.isBlank()}"
                    app:layout_constraintTop_toBottomOf="@id/meaning_input_layout">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/onyomi"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:focusable="false"
                        android:inputType="none"
                        android:text="@={viewModel.uiState.onyomi}" />

                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/onyomi_romaji_layout"
                    style="@style/TextInputLayout.FormField"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/add_lexeme_default_margin"
                    android:hint="@string/onyomi_romaji"
                    android:visibility="@{viewModel.uiState.charactersFetched &amp;&amp; !viewModel.uiState.onyomiRomaji.isBlank()}"
                    app:layout_constraintTop_toBottomOf="@id/onyomi_layout">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/onyomi_romaji"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:focusable="false"
                        android:inputType="none"
                        android:text="@={viewModel.uiState.onyomiRomaji}" />

                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/kunyomi_layout"
                    style="@style/TextInputLayout.FormField"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/add_lexeme_default_margin"
                    android:hint="@string/kunyomi"
                    android:visibility="@{viewModel.uiState.charactersFetched &amp;&amp; !viewModel.uiState.kunyomi.isBlank()}"
                    app:layout_constraintTop_toBottomOf="@id/onyomi_romaji_layout">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/kunyomi"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:focusable="false"
                        android:inputType="none"
                        android:text="@={viewModel.uiState.kunyomi}" />

                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/kunyomi_romaji_layout"
                    style="@style/TextInputLayout.FormField"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/add_lexeme_default_margin"
                    android:hint="@string/kunyomi_romaji"
                    android:visibility="@{viewModel.uiState.charactersFetched &amp;&amp; !viewModel.uiState.kunyomiRomaji.isBlank()}"
                    app:layout_constraintTop_toBottomOf="@id/kunyomi_layout">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/kunyomi_romaji"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:focusable="false"
                        android:inputType="none"
                        android:text="@={viewModel.uiState.kunyomiRomaji}" />

                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/name_readings_layout"
                    style="@style/TextInputLayout.FormField"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/add_lexeme_default_margin"
                    android:hint="@string/name_readings"
                    android:visibility="@{viewModel.uiState.charactersFetched &amp;&amp; !viewModel.uiState.nameReadings.isBlank()}"
                    app:layout_constraintTop_toBottomOf="@id/kunyomi_romaji_layout">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/name_readings"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:focusable="false"
                        android:inputType="none"
                        android:text="@={viewModel.uiState.nameReadings}" />

                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/name_readings_romaji_layout"
                    style="@style/TextInputLayout.FormField"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/add_lexeme_default_margin"
                    android:hint="@string/name_readings_romaji"
                    android:visibility="@{viewModel.uiState.charactersFetched &amp;&amp; !viewModel.uiState.nameReadingsRomaji.isBlank()}"
                    app:layout_constraintTop_toBottomOf="@id/name_readings_layout">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/name_readings_romaji"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:focusable="false"
                        android:inputType="none"
                        android:text="@={viewModel.uiState.nameReadingsRomaji}" />

                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/grade_taught_layout"
                    style="@style/TextInputLayout.FormField"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/add_lexeme_default_margin"
                    android:hint="@string/grade_taught"
                    android:visibility="@{viewModel.uiState.charactersFetched &amp;&amp; !viewModel.uiState.gradeTaught.isBlank()}"
                    app:layout_constraintTop_toBottomOf="@id/name_readings_romaji_layout">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/grade_taught"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:focusable="false"
                        android:inputType="none"
                        android:text="@={viewModel.uiState.gradeTaught}" />

                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/jlpt_level_layout"
                    style="@style/TextInputLayout.FormField"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/add_lexeme_default_margin"
                    android:hint="@string/jlpt_level"
                    android:visibility="@{viewModel.uiState.charactersFetched &amp;&amp; !viewModel.uiState.jlptLevel.isBlank()}"
                    app:layout_constraintTop_toBottomOf="@id/grade_taught_layout">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/jlpt_level"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:focusable="false"
                        android:inputType="none"
                        android:text="@={viewModel.uiState.jlptLevel}" />

                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/use_frequency_layout"
                    style="@style/TextInputLayout.FormField"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/add_lexeme_default_margin"
                    android:hint="@string/use_frequency_indicator"
                    android:visibility="@{viewModel.uiState.charactersFetched &amp;&amp; !viewModel.uiState.useFrequencyIndicator.isBlank()}"
                    app:layout_constraintTop_toBottomOf="@id/jlpt_level_layout">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/use_frequency"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:focusable="false"
                        android:inputType="none"
                        android:text="@={viewModel.uiState.useFrequencyIndicator}" />

                </com.google.android.material.textfield.TextInputLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </ScrollView>

        <Button
            android:id="@+id/button_cancel"
            style="@style/Button.ActionButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/add_lexeme_default_margin"
            android:clickable="@{!viewModel.uiState.submitting}"
            android:text="@string/cancel"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/button_confirm"
            app:layout_constraintStart_toStartOf="parent" />

        <Button
            android:id="@+id/button_confirm"
            style="@style/Button.ActionButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/add_lexeme_default_margin"
            android:clickable="@{!viewModel.uiState.submitting}"
            android:onClick="@{() -> viewModel.submitData()}"
            android:text="@string/confirm"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/button_cancel" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>
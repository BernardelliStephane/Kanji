<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Button.ToolbarMenuButton" parent="Widget.Material3.Button.IconButton">
        <item name="iconSize">24dp</item>
        <item name="iconTint">@color/black</item>
        <item name="rippleColor">@color/highlight</item>
    </style>

    <style name="TextButton.ActionButton" parent="Widget.Material3.Button.TextButton">
        <item name="android:textColor">@color/black</item>
        <item name="rippleColor">@color/highlight</item>
    </style>

    <style name="FormActionButton" parent="TextButton.ActionButton">
        <item name="android:textSize">@dimen/_18ssp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="IconActionButton" parent="TextButton.ActionButton">
        <item name="iconGravity">textTop</item>
        <item name="iconSize">24dp</item>
        <item name="iconTint">@color/black</item>
        <item name="cornerRadius">@dimen/_10sdp</item>
    </style>

    <style name="TextInputLayout.FormField" parent="Widget.Material3.TextInputLayout.FilledBox">
        <item name="boxBackgroundColor">@color/light_gray</item>
        <item name="boxStrokeColor">?attr/colorPrimaryVariant</item>
        <item name="cursorColor">?attr/colorPrimaryVariant</item>
        <item name="hintTextColor">?attr/colorPrimaryVariant</item>
    </style>
</resources>